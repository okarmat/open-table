@model OpenTable.ViewModels.RestaurantsViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Restaurants.FirstOrDefault().Name)
        </th>
        <th>
            Tables
        </th>

        <th>
            Actions
        </th>
    </tr>

@foreach (var item in Model.Restaurants) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)           
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tables.Count)
        </td>
        <td>
            @Html.ActionLink("Reserve table", "Create", "Reservations", new { restaurantId = item.Id }, null) |
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Table Management", "Manage", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
