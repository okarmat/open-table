@model OpenTable.Models.Restaurant

@{
    ViewBag.Title = "Table Management";
}

<h2>Table Management</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Restaurant</h4>
        <hr />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-primary" onclick="addTable(@ViewBag.RestaurantId)">Dodaj stolik</button>
            </div>            
        </div>

        <div class="restaurant"></div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input value="Zapisz konfigurację" onclick="saveTablesSet()" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/jquery-3.3.1.min.js")
    @Scripts.Render("~/Scripts/jquery-1.12.4.js")
    @Scripts.Render("~/Scripts/jquery-ui.js")
    @Scripts.Render("~/Scripts/table-management.js")
}
